@model CRUDCore.Models.Tasks

@{
    var title = ViewBag.Id > 0 ? "Edit " + Model.Title : "Create new task";
    var id = ViewBag.Id > 0 ? 1 : -1;
    ViewData["Title"] = title;
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Manager" method="post">
    <div class="form-horizontal">
        <h4>Tasks info.</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdCategoryTask" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdCategoryTask" asp-items="@Model.CategoryTasks" class="form-control"></select>
                <span asp-validation-for="IdCategoryTask" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromDate" type="date" id="FromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DeadlineDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DeadlineDate" type="date" id="DeadlineDate" class="form-control" />
                <span asp-validation-for="DeadlineDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnitPer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UnitPer" type="number" class="form-control" />
                <span asp-validation-for="UnitPer" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActived" />
                    <label asp-for="IsActived"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="button" onclick="window.location.href = '/Tasks/Index'" value="Cancel" class="btn btn-default" />
                <input type="hidden" data-id="@id" id="myId"/>
            </div>
        </div>
    </div>
</form>


